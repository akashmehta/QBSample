    <include
        android:id="@+id/activity_main_toolbar"
        layout="@layout/toolbar"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoViewFrame"
        android:layout_above="@+id/btnGroup"
        android:layout_below="@+id/activity_main_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/profile_img_shape"
                android:layout_gravity="center_horizontal"
                >
                <com.example.abc.qbsample.Utils.Profile_ImageView
                    android:id="@+id/profile_Img"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp150"
                    android:paddingTop="@dimen/dp50"
                    android:paddingRight="@dimen/dp45"
                    android:paddingLeft="@dimen/dp55"
                    android:paddingBottom="@dimen/dp50"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@drawable/adduser" />
                <ProgressBar
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerInParent="true"
                    android:id="@+id/ImageLoader"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/profile_img_shape"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp10"
                >
                <com.example.abc.qbsample.Utils.Profile_ImageView
                    android:id="@+id/remote_profile_Img"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp150"
                    android:paddingTop="@dimen/dp50"
                    android:paddingRight="@dimen/dp45"
                    android:paddingLeft="@dimen/dp55"
                    android:paddingBottom="@dimen/dp50"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@drawable/adduser" />
                <ProgressBar
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerInParent="true"
                    android:id="@+id/remoteImageLoader"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btnGroup"
        android:layout_above="@+id/btnGroup1"
        android:layout_margin="@dimen/dp10"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startCall"
            android:text="Start Call"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hangUp"
            android:text="hangUp"
            android:layout_marginLeft="@dimen/dp10"
            android:visibility="gone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recieveCall"
            android:text="Recieve Call"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp10"
        android:id="@+id/btnGroup1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_audio"
            android:text="Voice Massage"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_video"
            android:text="Video Massage"
            android:layout_marginLeft="@dimen/dp10"
            />
    </LinearLayout>
</RelativeLayout>
