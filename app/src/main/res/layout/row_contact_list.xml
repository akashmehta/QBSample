<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp65"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:id="@+id/user_image_layout"
        >
        <com.example.abc.qbsample.Utils.UserIconImage
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:background="@drawable/user_icon_shape"
            android:backgroundTint="#cddc39"
            android:id="@+id/user_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="AB"
            android:textSize="@dimen/sp18"
            android:id="@+id/midTitle"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_toRightOf="@+id/user_image_layout"
        android:layout_marginLeft="@dimen/dp10"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="@string/Username"
            android:textSize="@dimen/sp16"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_last_massage"
            android:text="user_last_message"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_last_seen"
            android:text="wed"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/username"
            android:layout_marginRight="@dimen/dp10"
            />
    </RelativeLayout>

</RelativeLayout>
